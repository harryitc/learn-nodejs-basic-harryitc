<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <title>Nodejs Basic</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div>
      <div class="w3-container">
        <h2>List Users: Table</h2>

        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Points</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < dataUser.length;i++) { %>
            <tr>
              <td><%= dataUser[i].ID %></td>
              <td><%= dataUser[i].firstName %></td>
              <td><%= dataUser[i].lastName %></td>
              <td>
                <button type="button">
                  <a href="/detail/user/<%= dataUser[i].ID%>"> Detail </a>
                </button>
                <button type="button">
                  <a href="/edit/user/<%= dataUser[i].ID%>"> Edit </a>
                </button>
                <button type="button">
                  <a href="/delete/user/<%= dataUser[i].ID%>"> Delete </a>
                </button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="create-user-container">
        <form action="/create-new-user" method="post">
          <div>Create a new user:</div>
          <div>
            <label for="">First Name:</label>
            <!-- cũng có thế đặt name = "firstName" là 1 tên khác.
            Nhưng ở đây, cố tình đặt cho nó giống với table của chúng ta  -->

            <!-- Lưu Ý: không thể sử dụng id thay cho name được. -->
            <input type="text" name="firstName" />
          </div>
          <div>
            <label for="">Last Name:</label>
            <input type="text" name="lastName" />
          </div>
          <div>
            <label for="">Email</label>
            <input type="email" name="email" />
          </div>
          <div>
            <label for="">Address</label>
            <input type="text" name="address" />
          </div>
          <div>
            <button type="submit" class="btn-submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
